<resources>

    <!-- 主要样式，没有ActionBar -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <!-- 首页的样式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionOverflowMenuStyle" tools:targetApi="lollipop">@style/CustomOverFlow</item>-->
        <item name="android:actionOverflowButtonStyle">@style/CustomOverFlow</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarWithNoTitle</item>
    </style>

    <!-- 首页右侧隐藏按钮的样式 -->
    <style name="CustomOverFlow">
        <item name="android:src">@mipmap/moreoverflow</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- 首页显示文字为首页 -->
    <style name="AppTheme.ActionBarWithNoTitle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:text">首页</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- 右滑回退页面样式 -->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dp</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <!-- 机体列表页标题文字样式 -->
    <style name="ExpandedAppBarTitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="msdetail_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="popupWindow_sh_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_hidden_anim</item>
    </style>

</resources>
