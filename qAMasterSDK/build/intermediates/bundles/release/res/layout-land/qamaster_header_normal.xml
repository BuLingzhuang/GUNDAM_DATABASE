<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/qamaster_dialog_header_background"
    android:gravity="center_vertical|left"
    android:orientation="horizontal"
    android:paddingLeft="16dp" >

    <com.qamaster.android.ui.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:text="@string/qamaster_login_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/qamaster_header_text"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/qamaster_login_btn_anon_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:gravity="right"
        android:paddingRight="16dp"
        android:text="@string/qamaster_login_anon_login_button"
        android:textColor="@color/qamaster_header_text"
        android:textSize="15sp" />

</LinearLayout>