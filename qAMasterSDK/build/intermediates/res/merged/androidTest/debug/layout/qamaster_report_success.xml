<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qamaster_white">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:padding="25dp"
        android:background="@color/qamaster_transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/success" />

    <com.qamaster.android.ui.MontserratTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:background="@drawable/qamaster_editor_button"
        android:text="@string/qamaster_report_success"
        android:textColor="@color/qamaster_paleBlack"
        android:textSize="20sp" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>